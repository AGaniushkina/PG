        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock"></span>
            </div>
        </div>
        <div class="col-12">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="input-group mb-3">
